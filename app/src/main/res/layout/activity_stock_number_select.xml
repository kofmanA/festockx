<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/accent1"
    tools:context=".StockTicker.StockNumberSelectActivity">
    <TextView
        android:text="@string/number_input"
        android:id="@+id/display_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>
    <Spinner
        android:id="@+id/stock_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/tickerBoxes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <Button
        android:text="Enter Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/accent6"
        android:onClick="submit"/>
</LinearLayout>